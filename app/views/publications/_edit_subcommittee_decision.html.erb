<%= form_tag pp_approval_publication_path(@publication), method: :post, id: 'subcommittee_decision_form', class: 'form-horizontal' do %>
  <div class="control-group">
    <label class="control-label">Publication Status</label>
    <div class="controls radio">
      <% Publication::PP_STATUS.each do |display, value| %>
        <%= radio_button :publication, :status, value, :checked => (value == @publication.status) %> <label><%= display %></label>
      <% end %>
    </div>
  </div>

  <div class="control-group">
    <%= label :publication, :manuscript_number, 'Manuscript Number', class: 'control-label' %>
    <div class="controls">
      <%= text_field :publication, :manuscript_number %>
    </div>
  </div>

  <div class="control-group">
    <%= label :publication, :additional_ppcommittee_instructions, 'Additional Instructions to Email to Lead Author', class: 'control-label' %>
    <div class="controls">
      <%= text_area :publication, :additional_ppcommittee_instructions, rows: 7, style: "width:99%" %>
    </div>
  </div>

  <div class="form-actions">
    <%= link_to_function (@publication.status == 'proposed' ? 'Submit' : 'Update') + " Subcommittee Decision", "$('#subcommittee_decision_form').submit();", class: 'btn btn-primary' %>
    <%= link_to 'Cancel', show_subcommittee_decision_publication_path(@publication), method: :post, remote: true, class: 'btn btn-danger' unless @publication.status == 'proposed' %>
  </div>
<% end %>
