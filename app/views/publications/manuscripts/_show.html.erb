<div class="field">
  <%#= link_to image_tag('icons/download.png', :alt => '') + 'Download', @publication.manuscript_url, :target => '_blank', :class => 'button' %>
  <%= link_to @publication.manuscript_url.split('/').last, @publication.manuscript_url, :target => '_blank' %>
  <%= image_tag('icons/download.png', :alt => '', :style => 'vertical-align:middle') %>
  <span class="quiet">uploaded <%= simple_time(@publication.manuscript_uploaded_at) %></span>
  -- <%= print_byte_size(@publication.manuscript.size) %>
  <% if current_user == @publication.user %>
  <%= link_to image_tag('icons/delete.png', :alt => '', :style => 'vertical-align:middle'), '#', :onclick => "if(!confirm('Are you sure you want to delete the uploaded manuscript?')){return false;};" + remote_function(:url => destroy_manuscript_publication_path(@publication), :method => :post) + "; return false;" %>
  <% end %>
  
  <br /><br />
  
  <div class="actions">
    <% if current_user == @publication.user %>
      <%= link_to image_tag('icons/addfile.png', :alt => '') + 'Upload a Revised Manuscript', '#', :onclick => remote_function(:url => edit_manuscript_publication_path(@publication), :method => :post) + "; return false;", :class => "button" %>
    <% end %>
  </div>
</div>