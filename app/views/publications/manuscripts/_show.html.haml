- full_url = "#{request.script_name}#{@publication.manuscript.url}"
= link_to @publication.manuscript.url.split('/').last, full_url, target: '_blank', class: 'btn btn-default'

%span.text-muted
  uploaded
  = simple_time(@publication.manuscript_uploaded_at)
\--
= number_to_human_size(@publication.manuscript.size)
- if current_user == @publication.user || current_user.secretary?
  = link_to 'Upload a Revised Manuscript', edit_manuscript_publication_path(@publication), method: :post, remote: true, class: 'btn btn-xs btn-default'
  = link_to 'Delete', destroy_manuscript_publication_path(@publication), method: :post, remote: true, class: 'btn btn-xs btn-danger-inverse', data: { confirm: "Are you sure you want to delete the uploaded manuscript?" }
