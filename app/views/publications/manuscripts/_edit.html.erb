<%= form_tag upload_manuscript_publication_path(@publication), method: :post, multipart: true, id: 'manuscript_form', class: 'form-horizontal' do  %>
  <div class="form-group">
    <%= label :publication, :manuscript, 'Upload Manuscript (PDF, Word)', class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= file_field :publication, :manuscript %>
      <%= hidden_field :publication, 'manuscript_cache' %>
    </div>
  </div>
  <div class="form-actions">
    <%= submit_tag (@publication.manuscript_url.blank? ? "Upload Manuscript" : "Replace Existing Manuscript"), class: 'btn btn-primary' %>
    <%= link_to 'Cancel', show_manuscript_publication_path(@publication), method: :post, remote: true, class: 'btn' unless @publication.manuscript_url.blank? %>
  </div>
<% end %>
