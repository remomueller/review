<% @title = "User: #{@user.name}" %>
<div class="page-header">
  <h1>
    <%= @title %>
    <% if current_user.system_admin? %>
      <%= link_to "Edit User", edit_user_path(@user), class: 'btn btn-mini' %>
      <%= link_to 'Delete User', @user, confirm: "Are you sure you want to delete User #{@user.name}?", method: :delete, class: 'btn btn-mini btn-danger' unless current_user == @user %>
      <%= link_to "View Users", users_path, class: 'btn btn-mini' %>
    <% end %>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt>Email</dt>
  <dd><%= @user.email %></dd>


  <% if current_user.system_admin? %>
    <dt>Status</dt>
    <dd><%= @user.status %></dd>

    <dt>P&amp;P Member</dt>
    <dd><%= check_box_tag :pp_committee, 'member', @user.pp_committee?, disabled: true %></dd>

    <dt>P&amp;P Secretary</dt>
    <dd><%= check_box_tag :pp_committee, 'secretary', @user.pp_committee_secretary?, disabled: true %></dd>

    <dt>SC Member</dt>
    <dd><%= check_box_tag :steering_committee, 'member', @user.steering_committee?, disabled: true %></dd>

    <dt>SC Secretary</dt>
    <dd><%= check_box_tag :steering_committee, 'secretary', @user.steering_committee_secretary?, disabled: true %></dd>

    <dt>System Admin</dt>
    <dd><%= check_box_tag :system, 'admin', @user.system_admin?, disabled: true %></dd>
  <% end %>
</dl>
