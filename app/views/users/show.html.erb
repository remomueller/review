<% @title = @user.name %>
<div class="page-header">
  <h1>
    <%= link_to_if current_user.system_admin?, "Users", users_path %> &middot; <%= @title %>
  </h1>
  <% if current_user.system_admin? %>
    <%= link_to "Edit User", edit_user_path(@user), class: 'btn btn-xs btn-default' %>
    <%= link_to 'Delete User', @user, method: :delete, class: 'btn btn-xs btn-danger-inverse', data: { confirm: "Are you sure you want to delete User #{@user.name}?" } unless current_user == @user %>
  <% end %>
</div>

<dl class="dl-horizontal">
  <dt>Email</dt>
  <dd><%= @user.email %></dd>

  <dt>User Avatar</dt>
  <dd><%= image_tag @user.avatar_url, class: 'img-rounded' %></dd>

  <% if current_user.system_admin? %>
    <dt>Status</dt>
    <dd><%= @user.status %></dd>

    <dt>P&amp;P Member</dt>
    <dd><%= simple_check @user.pp_committee? %></dd>

    <dt>P&amp;P Secretary</dt>
    <dd><%= simple_check @user.pp_committee_secretary? %></dd>

    <dt>SC Member</dt>
    <dd><%= simple_check @user.steering_committee? %></dd>

    <dt>SC Secretary</dt>
    <dd><%= simple_check @user.steering_committee_secretary? %></dd>

    <dt>System Admin</dt>
    <dd><%= simple_check @user.system_admin? %></dd>
  <% end %>
</dl>
