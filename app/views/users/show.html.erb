<% @title = "User: #{@user.name}" %>
<div class="page-header">
  <h1>
    <%= @title %>
    <% if current_user.system_admin? %>
      <%= link_to "Edit User", edit_user_path(@user), class: 'btn btn-xs' %>
      <%= link_to 'Delete User', @user, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: "Are you sure you want to delete User #{@user.name}?" } unless current_user == @user %>
      <%= link_to "View Users", users_path, class: 'btn btn-xs' %>
    <% end %>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt>Email</dt>
  <dd><%= @user.email %></dd>

  <dt>User Avatar</dt>
  <dd><%= image_tag @user.avatar_url, class: 'img-rounded' %></dd>

  <% if current_user.system_admin? %>
    <dt>Status</dt>
    <dd><%= @user.status %></dd>

    <dt>P&amp;P Member</dt>
    <dd><%= check_box_tag :pp_committee, 'member', @user.pp_committee?, disabled: true %></dd>

    <dt>P&amp;P Secretary</dt>
    <dd><%= check_box_tag :pp_committee, 'secretary', @user.pp_committee_secretary?, disabled: true %></dd>

    <dt>SC Member</dt>
    <dd><%= check_box_tag :steering_committee, 'member', @user.steering_committee?, disabled: true %></dd>

    <dt>SC Secretary</dt>
    <dd><%= check_box_tag :steering_committee, 'secretary', @user.steering_committee_secretary?, disabled: true %></dd>

    <dt>System Admin</dt>
    <dd><%= check_box_tag :system, 'admin', @user.system_admin?, disabled: true %></dd>

    <% if @user.authentications.size > 0 %>
      <dt>Authentications</dt>
      <dd>
        <div style="margin-top:10px">
          <% @user.authentications.each do |authentication| %>
            <div class="authentication">
              <%= image_tag "contour/#{authentication.provider}_32.png", height: "32px" %>
              <div class="provider"><%= authentication.provider.titleize %></div>
              <div class="uid"><%= authentication.uid %></div>
            </div>
          <% end %>
        </div>
      </dd>
    <% end %>
  <% end %>
</dl>
