<% @title = 'Users' %>
<h1><%= @title %></h1>

<% if current_user.system_admin? %>
  <%= link_to image_tag('gentleface/16/user.png', alt: '') + "Create User", new_user_path, class: 'button positive' %>
<% end %>

<%= form_tag users_path, method: :get, :remote => true, :id => "users_search" do %>
  <%= hidden_field_tag :order %>
  Search <%= text_field_tag 'search', params[:search] %> <%= information %>
  <div id="users"><div style="clear:both"></div><br /><center><%= image_tag "ajax-loader.gif" %></center></div>
<% end %>

<%= javascript_tag do %>
  $(function(){
    $.get($("#users_search").attr("action"), $("#users_search").serialize(), null, "script");
  });
<% end %>
