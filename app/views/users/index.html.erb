<h1>Listing users</h1>
<% if current_user.system_admin? %>
  <%= link_to image_tag('icons/im.png', :alt => '') + "Create New User", new_user_path, :class => 'button positive' %>
  <div style="clear:both"></div>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Recent Activity</th>
    <% if current_user.system_admin? %>
      <th>Status</th>
      <th>P&amp;P Committee</th>
      <th>Steering Committee</th>
      <th>P&amp;P Secretary</th>
      <th>SC Secretary</th>      
      <th>System Admin</th>
      <th></th>
      <th></th>
    <% end %>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.name, user %></td>
    <td><%= user.email %></td>
    <td><%= recent_activity(user.current_sign_in_at) %></td>
    <% if current_user.system_admin? %>
      <td><%= user.status %></td>
      <td style="text-align:center"><%= check_box_tag 'user', 'pp_committee', user.pp_committee?, :disabled => true %></td>
      <td style="text-align:center"><%= check_box_tag 'user', 'steering_committee', user.steering_committee?, :disabled => true %></td>
      <td style="text-align:center"><%= check_box_tag 'user', 'pp_committee_secretary', user.pp_committee_secretary?, :disabled => true %></td>
      <td style="text-align:center"><%= check_box_tag 'user', 'steering_committee_secretary', user.steering_committee_secretary?, :disabled => true %></td>
      <td style="text-align:center"><%= check_box_tag 'user', 'system_admin', user.system_admin?, :disabled => true %></td>
      <td style="vertical-align:middle"><%= link_to image_tag('icons/edit.png', :alt => ''), edit_user_path(user) %></td>
      <td style="vertical-align:middle">
        <% unless current_user == user %>
          <%= link_to image_tag('icons/delete.png', :alt => ''), user, :confirm => "Are you sure you want to delete User #{user.name}?", :method => :delete %>
        <% end %>
      </td>
    <% end %>
  </tr>
<% end %>
</table>
