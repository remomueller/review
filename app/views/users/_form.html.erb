    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.select :status, User::STATUS %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :steering_committee, 'Steering Committee' %><br />
    <%= f.check_box :steering_committee %>
  </div>
  <div class="field">
    <%= f.label :pp_committee, 'Publications and Presentations Sub Committee' %><br />
    <%= f.check_box :pp_committee %>
  </div>
  <div class="field">
    <%= f.label :system_admin %><br />
    <%= f.check_box :system_admin %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
