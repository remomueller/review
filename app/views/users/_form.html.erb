<div class="page-header">
  <h1><%= @title %></h1>
</div>

<% url = @user.new_record? ? activate_users_path : user_path(@user) %>
<% method = @user.new_record? ? :post : :put %>
<%= form_for(@user, url: url, method: method, html: { class: 'form-horizontal' }) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation" class="bs-callout bs-callout-danger">
      <h4><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved</h4>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :first_name, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :first_name %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :last_name %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :status, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.select :status, User::STATUS %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.text_field :email %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label">P&amp;P Committee</label>
    <div class="controls checkbox">
      <%= f.check_box :pp_committee %> <%= f.label :pp_committee, 'Member' %>
      <%= f.check_box :pp_committee_secretary %> <%= f.label :pp_committee_secretary, 'Secretary' %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label">Steering Committee</label>
    <div class="controls checkbox">
      <%= f.check_box :steering_committee %> <%= f.label :steering_committee, 'Member' %>
      <%= f.check_box :steering_committee_secretary %> <%= f.label :steering_committee_secretary, 'Secretary' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :system_admin, class: 'col-md-2 control-label' %>
    <div class="col-md-10">
      <%= f.check_box :system_admin %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit (@user.new_record? ? "Create User" : "Update User"), class: 'btn btn-primary' %>
    <%= cancel %>
  </div>
<% end %>
