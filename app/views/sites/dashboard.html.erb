<% @title = 'CHAT Proposal Submission Forms' %>

<h1><%= @title %></h1>
<br />
<%= link_to image_tag('icons/addfile.png', :alt => '') + 'Submit Manuscript or Publication for Review', new_publication_path, :class => 'button' %>
<div style="clear:both"></div>
<% proposed_publications = Publication.current.status('proposed') %>
<% if (current_user.pp_committee? or current_user.pp_committee_secretary?) and proposed_publications.size > 0 %>
  <h3>P&amp;P Committee: Publication Proposals Awaiting Review</h3>
  <% proposed_publications.each do |publication| %>
    <div>
      <%= link_to publication.full_title, publication %>
      <% if user_publication_review = current_user.user_publication_reviews.find_by_publication_id(publication.id) %>
        Review Submitted <%= simple_time(user_publication_review.updated_at) %>
      <% end %>
    </div>
  <% end %>
<% end %>

<% approved_publications = Publication.current.status('approved') %>
<% if (current_user.steering_committee? or current_user.steering_committee_secretary?) and approved_publications.size > 0%>
  <h3>Steering Committee: Publication Proposals Awaiting Review</h3>
  <% approved_publications.each do |publication| %>
    <div>
      <%= link_to publication.full_title, publication %>
      <% if user_publication_review = current_user.user_publication_reviews.find_by_publication_id(publication.id) %>
        Review Submitted <%= simple_time(user_publication_review.updated_at) %>
      <% end %>
    </div>
  <% end %>
<% end %>
