<!DOCTYPE html>
<html>
<head>
  <title>Review | version <%= Review::VERSION::STRING %></title>
  <title><%= ['Review', @title].join(' - ') unless @title.blank? %></title>
  <%#= stylesheet_link_tag :all %>
  <%= stylesheet_link_tag 'screen', :media => 'screen, projection' %>
  <%= stylesheet_link_tag 'print', :media => 'print' %>
  <!--[if IE]>
    <%= stylesheet_link_tag 'ie', :media => 'screen, projection' %>
  <![endif]-->
  <%= stylesheet_link_tag 'foundation', :media => 'screen, projection' %>
  
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div class="container" style="background-image: url(<%= SITE_URL %>/images/brigham.png);">

    <div id="header">
      <div style="position:relative">
        <span style="position:absolute;top:18px;left:50px;font-size:0.5em;font-variant:normal">version <%= Review::VERSION::STRING %></span>
      </div>
      <span style="color:#D4002F">C</span><span style="color:#56DF00">H</span><span style="color:#D9DE00">A</span><span style="color:#23FFFF">T</span> <span style="color:#2F0C72">Publications</span>
    </div>

    <div id="message">
      <%= render :partial => 'layouts/message' %>
    </div>

    <div id="menu">
      <%= render :partial => 'layouts/menu' %>
    </div>
  
    <% if false %>
      <div class="notice"><%= notice %></div>
      <div class="error"><%= flash[:warning].humanize if flash[:warning] %></div>
      <div class="error"><%= alert %></div>
    <% end %>
  
    <div id="content">
      <%= yield %>
    </div>
  </div>
</body>
</html>
