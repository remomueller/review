<!DOCTYPE html>
<html>
<head>
  <title>Review | version <%= Review::VERSION::STRING %></title>
  <title><%= ['Review', @title].join(' - ') unless @title.blank? %></title>
  <%#= stylesheet_link_tag :all %>
  <%= stylesheet_link_tag 'screen', :media => 'screen, projection' %>
  <%= stylesheet_link_tag 'print', :media => 'print' %>
  <!--[if IE]>
    <%= stylesheet_link_tag 'ie', :media => 'screen, projection' %>
  <![endif]-->
  <%= stylesheet_link_tag 'foundation', :media => 'screen, projection' %>
  
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div class="container">

    <div id="header">
      <div style="position:relative">
        <span style="position:absolute;top:18px;left:50px;font-size:0.5em;font-variant:normal">version <%= Review::VERSION::STRING %></span>
      </div>
      Chat Publications
    </div>

    <div id="message">
      <%= render :partial => 'layouts/message' %>
    </div>

    <div id="menu">
      <% if user_signed_in? -%>
        <span style="float:right">
          <%#= link_to 'Logout', destroy_user_session_path %>
          <%= link_to_function current_user.email, "$('user_links').show();" %> [<%= current_user.name %>]
          <% if false %>
          <div style="position:relative">
            <div id="user_links" style="position:absolute" style="display:none;color:#404040;">
              Something
            </div>
          </div>
          <% end %>
        </span>
        <%= link_to 'Home', root_path %>
        <%#= link_to 'Overview', overview_entries_path %>
        <%#= link_to 'Accounts', accounts_path %>
        <%#= link_to 'Charge Types', charge_types_path %>
        <%#= link_to 'Entries', entries_path %>
    	<% else %>
    		<span style="float:right"><%= link_to 'Login', new_user_session_path %></span>
    		<span style="float:right"><%= link_to 'Sign Up', new_user_registration_path %></span>
    	&nbsp;		
    	<% end %>
    </div>
    
    
    
    <% if user_signed_in? %>

      | <%= link_to 'Logout', destroy_user_session_path %>
    <% else %>
  		<%= link_to 'Login', authentications_path %> | 
  		<%= link_to 'Sign Up', new_user_registration_path %>
  	<% end %>
  
    <% if false %>
      <div class="notice"><%= notice %></div>
      <div class="error"><%= flash[:warning].humanize if flash[:warning] %></div>
      <div class="error"><%= alert %></div>
    <% end %>
  
    <%= yield %>
  </div>
</body>
</html>
